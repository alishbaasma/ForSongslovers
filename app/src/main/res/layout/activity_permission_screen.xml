<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PermissionScreen">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6D98E2"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar">

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:contentDescription="@string/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sc" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="160dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="20dp"
        android:textSize="17dp"
        android:text="Auto Run"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="20dp"
        android:textStyle="normal"
        android:textSize="14dp"
        android:text="Disable this function to prevent this\napp from running automatically and\nto force it to stop running if it hasn't\nbeen used for sometime"
        />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/togglebtn"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="260dp"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/togglebtn2"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="260dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="160dp"/>

    <View
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#a40404"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Record Audio"
          android:layout_marginTop="270dp"
          android:layout_marginLeft="20dp"
          android:textStyle="bold"
          android:textSize="17dp" />

     <View
         android:layout_width="380dp"
         android:layout_height="1dp"
         android:layout_gravity="center"
         android:layout_marginTop="310dp"
         android:layout_marginLeft="12dp"
         android:layout_marginRight="12dp"
         android:background="#a40404" />

       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="CONFIRM"
           android:layout_alignParentBottom="true"
           android:textStyle="bold"
           android:textSize="17dp"
           android:id="@+id/btnLocationPage" />

</RelativeLayout>